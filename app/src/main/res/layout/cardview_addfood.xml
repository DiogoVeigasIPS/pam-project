<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:layout_marginBottom="@dimen/grouped_spacing"
    android:backgroundTint="@color/light_gray"
    app:cardCornerRadius="15dp"
    app:cardElevation="2dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/grouped_spacing">

        <ImageButton
            android:id="@+id/bt_add"
            android:layout_width="@dimen/icon_size"
            android:layout_height="@dimen/icon_size"
            android:contentDescription="@string/card_edit"
            android:src="@drawable/add"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/black" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="6"
            app:layout_constraintEnd_toStartOf="@id/bt_add"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:layout_width="@dimen/icon_size"
                android:layout_height="@dimen/icon_size"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:contentDescription="@string/card_icon"
                android:src="@drawable/steak_card" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/food_name"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/main_menu_padding"
                    android:background="@drawable/no_underline_hint"
                    android:gravity="top"
                    android:hint="@string/food_name"
                    android:maxLines="1"
                    android:textColorHint="@color/black"
                    android:textSize="@dimen/label_main_weight"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/food_description"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/card_additional_info"
                    android:background="@drawable/no_underline_hint"
                    android:gravity="top"
                    android:hint="@string/additional_details"
                    android:maxLines="3"
                    android:textColorHint="@color/black"
                    android:textSize="@dimen/main_labels"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>