<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.AddFoodActivity">

    <LinearLayout
        android:id="@+id/header_foods"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/grouped_spacing"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="@dimen/header_padding"
        android:weightSum="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/bt_voltar"
            android:layout_width="@dimen/icon_size"
            android:layout_height="@dimen/icon_size"
            android:layout_marginEnd="10dp"
            android:layout_weight="0.1"
            android:background="@color/white"
            android:contentDescription="@string/back_arrow"
            android:src="@drawable/back_arrow"
            tools:ignore="TouchTargetSizeCheck" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.9"
            android:text="@string/title_addfoods"
            android:textColor="@color/black"
            android:textSize="@dimen/title_size" />


    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/buttons_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/light_gray"
        android:paddingHorizontal="@dimen/main_padding"
        android:paddingTop="@dimen/main_menu_padding"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/header_foods">

        <EditText
            android:id="@+id/foodmeal_search"
            android:layout_width="0dp"
            android:layout_height="@dimen/icon_size"
            android:background="@drawable/container_blackborder"
            android:hint="@string/search_foods"
            android:imeOptions="actionSearch"
            android:padding="@dimen/grouped_spacing"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bt_quickadd"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/input_spacing"
            android:background="@drawable/container_blackborder"
            android:checked="true"
            android:paddingVertical="@dimen/padding_button_selector"
            android:text="@string/quickadd"
            android:textSize="@dimen/body_size"
            app:layout_constraintEnd_toEndOf="@id/foodmeal_search"
            app:layout_constraintStart_toStartOf="@id/foodmeal_search"
            app:layout_constraintTop_toBottomOf="@id/foodmeal_search" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bt_myfoods"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/input_spacing"
            android:background="@drawable/container_blackborder"
            android:checked="true"
            android:paddingVertical="@dimen/padding_button_selector"
            android:text="@string/label_myfood"
            android:textSize="@dimen/body_size"
            app:layout_constraintEnd_toEndOf="@id/bt_quickadd"
            app:layout_constraintStart_toStartOf="@id/bt_quickadd"
            app:layout_constraintTop_toBottomOf="@id/bt_quickadd" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bt_mymeals"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/input_spacing"
            android:background="@drawable/container_blackborder"
            android:checked="true"
            android:paddingVertical="@dimen/padding_button_selector"
            android:text="@string/label_mymeals"
            android:textSize="@dimen/body_size"
            app:layout_constraintEnd_toEndOf="@id/bt_myfoods"
            app:layout_constraintStart_toStartOf="@id/bt_myfoods"
            app:layout_constraintTop_toBottomOf="@id/bt_myfoods" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>