<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1"
    tools:context=".MainActivity">

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.99">

    </androidx.fragment.app.FragmentContainerView>

    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_weight="0.01"
        android:background="@color/menu_blue"
        android:orientation="horizontal"
        android:paddingVertical="@dimen/body_spacing">

        <!-- Button 1 -->
        <ImageButton
            android:id="@+id/bt_home"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/bt_diary"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:src="@drawable/baseline_house_48"
            android:backgroundTint="@color/menu_blue"/>

        <!-- Button 2 -->
        <ImageButton
            android:id="@+id/bt_diary"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            app:layout_constraintStart_toEndOf="@+id/bt_home"
            app:layout_constraintEnd_toStartOf="@+id/bt_foods"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:src="@drawable/baseline_event_48"
            android:backgroundTint="@color/menu_blue"/>

        <!-- Button 3 -->
        <ImageButton
            android:id="@+id/bt_foods"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            app:layout_constraintStart_toEndOf="@+id/bt_diary"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:src="@drawable/baseline_rice_bowl_48"
            android:backgroundTint="@color/menu_blue"/>

    </androidx.constraintlayout.widget.ConstraintLayout>


</LinearLayout>