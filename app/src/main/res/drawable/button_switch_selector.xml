<!-- res/drawable/button_background_selector.xml -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Selected state -->
    <item android:state_checked="true">
        <layer-list>
            <!-- Shadow -->
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/black" /> <!-- Shadow color -->
                    <corners android:radius="8dp" /> <!-- Adjust corner radius as needed -->
                </shape>
            </item>

            <!-- Background -->
            <item
                android:top="2dp"
                android:right="2dp"
                android:left="2dp"
                android:bottom="2dp">
                <shape android:shape="rectangle">
                    <solid android:color="@color/white" /> <!-- Background color for checked state -->
                    <corners android:radius="6dp" /> <!-- Adjust corner radius as needed -->
                </shape>
            </item>
        </layer-list>
    </item>

    <!-- Default state -->
    <item>
        <layer-list>
            <!-- Shadow -->
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/black" /> <!-- Shadow color -->
                    <corners android:radius="8dp" /> <!-- Adjust corner radius as needed -->
                </shape>
            </item>

            <!-- Background -->
            <item
                android:top="2dp"
                android:right="2dp"
                android:left="2dp"
                android:bottom="2dp">
                <shape android:shape="rectangle">
                    <solid android:color="@color/light_gray" /> <!-- Background color for unchecked state -->
                    <corners android:radius="6dp" /> <!-- Adjust corner radius as needed -->
                </shape>
            </item>
        </layer-list>
    </item>

</selector>
